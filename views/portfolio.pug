extends template.pug

block content

	section.portfolio
		div.portfolio-cover
			div.jumbotron.text-center
				h1 Portfolio

	section.portfolio-wrap
		div.container
				article.col-md-4.portfolio_article
					img(src="images/chefs_work.jpg", alt="Chef's Compass")
					div.article_overlay
						h4 Chef's Compass
						p Vanilla JavaScript implementing MVC structure
						i.fa.fa-bitbucket.fa-5x(aria-hidden="true")
						a.def-btn.repository-link(href="https://chefs-compass-prod.herokuapp.com/", target="_blank") Live Project

				article.col-md-4.portfolio_article
					img(src="images/portfolio_work.jpg", alt="Work Title") 
					div.article_overlay
						h4 My Portfolio Site
						p Fully creating my portfolio site from Photoshop design to implementing the Bootstrap framework.
						i.fa.fa-bitbucket.fa-5x(aria-hidden="true")
						a.def-btn.repository-link(href="https://github.com/eheckard23/Portfolio_Site" target="_blank") View the code

				article.col-md-4.portfolio_article
					img(src="images/php_work.jpg", alt="Work Title")
					div.article_overlay
						h4 &#60;?PHP
						p Using server-side technology to create and store user information within a database.
						i(aria-hidden="true").fa.fa-bitbucket
						a.def-btn.repository-link(href="https://bitbucket.org/eheckard23/heckard_ethan_portfolio", target="_blank") View the code

